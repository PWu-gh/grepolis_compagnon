{
    "manifest_version": 3,
    "name": "Grepolis Compagnon",
    "description": "Simplify Grepolis user experience",
    "version": "1.0",
    "icons": {
        "32": "icons/G_32.png",
        "48": "icons/G_48.png",
        "128":"icons/G_128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.grepolis.com/game/*"
            ],
            "js": [
                "scripts/content.js",
                "scripts/farmer_town_simplifier.js",
                "scripts/market_gold_exchange.js",
                "scripts/shortcut.js"
            ]
            
        }
    ]

}